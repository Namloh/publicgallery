@using Microsoft.AspNetCore.Identity
@using galerie.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link kok" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button  type="submit" class="nav-link kok btn btn-link logout">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link kok" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link kok" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}

